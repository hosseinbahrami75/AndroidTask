<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Gray_9</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--This is my custom theme (noActionBar)-->
    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        <item name="android:navigationBarColor" tools:targetApi="lollipop"> @color/darkBackground</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <!--My RatingBar Style-->
    <style name="Base.Widget.AppCompat.RatingBar.Small.MyRatingBar">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/md_yellow_700</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/md_yellow_800</item>
    </style>


</resources>